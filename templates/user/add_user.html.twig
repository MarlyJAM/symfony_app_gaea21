{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #FFFFFF; padding: 2px 6px; }
</style>

<div class="example-wrapper">
        {{ form_start(form) }}
            {{ form_row(form.nom, {'attr': {'class': 'btn btn-outline-primary'}}) }}
            {{ form_row(form.prenom, {'attr': {'class': 'btn btn-outline-primary'}}) }}
             {{ form_row(form.birthDate)}}
            {{ form_row(form.email, {'attr': {'class': 'btn btn-outline-primary'}}) }}
            {{form_row(form.adresse, {'attr': {'class': 'btn btn-outline-primary'}})}}
            {{form_row(form.tel, {'attr': {'class': 'btn btn-outline-primary'}})}}
            {{form_row(form.submit, {'attr': {'class': 'btn btn-outline-primary'}})}}
        {{ form_end(form) }}
</div>
{% endblock %}
