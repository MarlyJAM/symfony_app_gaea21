{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #FFFFFF; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <a class="btn btn-outline-success btn-rounded"  href="{{ path('app_add_user') }}">Ajouter un utilisateur</a>
    <br><br><br>
    <table class="table table-bordered border-primary">
        <thead>
        <tr>
        <th scope="col">#</th>
        <th scope="col">Nom</th>
        <th scope="col">Pr√©nom</th>
        <th scope="col">Email</th>
        <th scope="col">Adresse</th>
        <th scope="col">Tel</th>
        </tr>
        </thead>
        <tbody>
            {% for user in users %}
            <tr>
            <th scope="row">{{user.id}}</th>
            <td>{{user.nom}}</td>
            <td>{{user.prenom}}</td>
            <td>{{user.email}}</td>
            <td>{{user.adresse}}</td>
            <td>{{user.tel}}</td>
            <td>
                <button class="btn dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Actions
                </button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="{{ path('app_profile_user', {'id': user.getId})}}">Voir</a></li>
                    <li><a class="dropdown-item" href="{{ path('app_user_delete', {'id': user.getId})}}">Supprimer</a></li>
                </ul>
            </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
